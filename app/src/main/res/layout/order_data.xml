<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderData">

    <TextView
        android:id="@+id/textOrderNum"
        android:layout_width="110dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:gravity="center_vertical"
        android:text="@string/item_order_number"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textItemType"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/textOrderNumber"
        android:layout_width="180dp"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toTopOf="@+id/textItemType"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textOrderNum"/>

    <TextView
        android:id="@+id/textComments"
        android:layout_width="110dp"
        android:layout_height="44dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:text="@string/comments"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textOrderNum" />

    <EditText
        android:id="@+id/tvComments"
        android:layout_width="180dp"
        android:layout_height="277dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:textAlignment="center"
        android:textSize="14sp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@+id/textOrderNumber"
        app:layout_constraintStart_toEndOf="@+id/textComments"
        app:layout_constraintBottom_toTopOf="@+id/buttonPrint"/>

    <Button
        android:id="@+id/buttonPrint"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="@string/print"
        android:layout_marginTop="22dp"
        android:background="@android:color/holo_blue_dark"
        android:onClick="onClickPrint"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.711"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvComments"/>


</android.support.constraint.ConstraintLayout>